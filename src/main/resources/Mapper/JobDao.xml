<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.JobDao">

    <resultMap type="com.entity.Job" id="JobMap">
        <result property="jId" column="j_id" jdbcType="INTEGER"/>
        <result property="jName" column="j_name" jdbcType="VARCHAR"/>
        <result property="jDesc" column="j_desc" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="JobMap">
        select
          j_id, j_name, j_desc
        from personmanage.job
        where j_id = #{jId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="JobMap">
        select
          j_id, j_name, j_desc
        from personmanage.job
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="JobMap">
        select
          j_id, j_name, j_desc
        from personmanage.job
        <where>
            <if test="jId != null">
                and j_id = #{jId}
            </if>
            <if test="jName != null and jName != ''">
                and j_name = #{jName}
            </if>
            <if test="jDesc != null and jDesc != ''">
                and j_desc = #{jDesc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="jId" useGeneratedKeys="true">
        insert into personmanage.job(j_name, j_desc)
        values (#{jName}, #{jDesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update personmanage.job
        <set>
            <if test="jName != null and jName != ''">
                j_name = #{jName},
            </if>
            <if test="jDesc != null and jDesc != ''">
                j_desc = #{jDesc},
            </if>
        </set>
        where j_id = #{jId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from personmanage.job where j_id = #{jId}
    </delete>

</mapper>