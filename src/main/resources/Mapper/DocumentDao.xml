<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.DocumentDao">

    <resultMap type="com.entity.Document" id="DocumentMap">
        <result property="dId" column="d_id" jdbcType="INTEGER"/>
        <result property="dName" column="d_name" jdbcType="VARCHAR"/>
        <result property="dFilename" column="d_fileName" jdbcType="VARCHAR"/>
        <result property="dDate" column="d_date" jdbcType="OTHER"/>
        <result property="uId" column="u_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DocumentMap">
        select
          d_id, d_name, d_fileName, d_date, u_id
        from personmanage.document
        where d_id = #{dId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DocumentMap">
        select
          d_id, d_name, d_fileName, d_date, u_id
        from personmanage.document
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DocumentMap">
        select
          d_id, d_name, d_fileName, d_date, u_id
        from personmanage.document
        <where>
            <if test="dId != null">
                and d_id = #{dId}
            </if>
            <if test="dName != null and dName != ''">
                and d_name = #{dName}
            </if>
            <if test="dFilename != null and dFilename != ''">
                and d_fileName = #{dFilename}
            </if>
            <if test="dDate != null">
                and d_date = #{dDate}
            </if>
            <if test="uId != null">
                and u_id = #{uId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="dId" useGeneratedKeys="true">
        insert into personmanage.document(d_name, d_fileName, d_date, u_id)
        values (#{dName}, #{dFilename}, #{dDate}, #{uId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update personmanage.document
        <set>
            <if test="dName != null and dName != ''">
                d_name = #{dName},
            </if>
            <if test="dFilename != null and dFilename != ''">
                d_fileName = #{dFilename},
            </if>
            <if test="dDate != null">
                d_date = #{dDate},
            </if>
            <if test="uId != null">
                u_id = #{uId},
            </if>
        </set>
        where d_id = #{dId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from personmanage.document where d_id = #{dId}
    </delete>

</mapper>